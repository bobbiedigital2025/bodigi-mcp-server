{
  "name": "@bodigi/mcp-client",
  "version": "1.0.0",
  "description": "Lightweight Node/TS client SDK for connecting to BoDiGi MCP Server from any application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "example:fetch": "node dist/examples/node-call-fetch.js",
    "example:ingest": "node dist/examples/node-ingest.js",
    "example:security": "node dist/examples/security-demo.js",
    "build:examples": "tsc -p examples/tsconfig.json"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "client",
    "sdk",
    "bodigi",
    "ai"
  ],
  "author": "BoDiGi",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
