# BoDiGi MCP Client Configuration
# Copy this file to .env and fill in your values

# Required: MCP Server URL
BODIGI_MCP_URL=https://mcp.bodigi.com

# Authentication: Use either API Key OR OAuth Token
# API Key Authentication
BODIGI_API_KEY=your_api_key_here

# OAuth Token Authentication (alternative to API Key)
# BODIGI_OAUTH_TOKEN=your_oauth_token_here

# Optional: Timeout Configuration
# Request timeout in milliseconds (default: 30000)
BODIGI_TIMEOUT=30000

# Optional: Retry Configuration
# Maximum number of retry attempts (default: 3)
BODIGI_MAX_RETRIES=3

# Initial retry delay in milliseconds (default: 1000)
# Subsequent retries use exponential backoff
BODIGI_RETRY_DELAY=1000

# Optional: Audit Logging
# Enable/disable audit logging (default: true)
BODIGI_AUDIT_LOG=true

# Development/Production Mode
NODE_ENV=development
