{
  "name": "bodigi-mcp-server",
  "version": "1.0.0",
  "description": "Shared MCP tool server that powers learning, automation, and adaptive intelligence across all BoDiGi applications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bodigi-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsc && node dist/http-server.js",
    "test": "tsc && node dist/test-server.js",
    "test:oauth": "tsc && node dist/test-oauth.js",
    "oauth:create": "tsc && node dist/scripts/create-oauth-client.js create",
    "oauth:list": "tsc && node dist/scripts/create-oauth-client.js list",
    "oauth:delete": "tsc && node dist/scripts/create-oauth-client.js delete"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "learning",
    "automation",
    "bodigi"
  ],
  "author": "BoDiGi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
