{
  "name": "bodigi-mcp-server",
  "version": "1.0.0",
  "description": "Shared MCP tool server that powers learning, automation, and adaptive intelligence across all BoDiGi applications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bodigi-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsc && node dist/http-server.js",
    "test": "tsc && node dist/test-server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "learning",
    "automation",
    "bodigi"
  ],
  "author": "BoDiGi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3"
  }
}
