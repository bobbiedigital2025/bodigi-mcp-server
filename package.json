{
  "name": "bodigi-mcp-server",
  "version": "1.0.0",
  "description": "Shared MCP tool server that powers learning, automation, and adaptive intelligence across all BoDiGi applications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bodigi-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-manifests",
    "copy-manifests": "mkdir -p dist/tools/manifests && cp src/tools/manifests/*.json dist/tools/manifests/",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "npm run build && node dist/index.js",
    "test": "npm run build && node dist/test-server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "learning",
    "automation",
    "bodigi"
  ],
  "author": "BoDiGi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
