# BoDiGi MCP Server Configuration
# Copy this file to .env and configure with your values

# Server
NODE_ENV=development
PORT=3000

# API Security
# Comma-separated list of API keys for authentication
MCP_API_KEYS=your-secret-key-1,your-secret-key-2

# Web Fetch Security
# Comma-separated list of allowed domains for web fetching
ALLOWED_DOMAINS=wikipedia.org,github.com,.edu,.gov,docs.python.org,developer.mozilla.org
FETCH_TIMEOUT_MS=10000
MAX_FETCH_BYTES=1048576

# Database
# Use DATABASE_URL for PostgreSQL or leave blank to use SQLite
# DATABASE_URL=postgresql://user:password@localhost:5432/bodigi
SQLITE_PATH=./data/bodigi.db

# Logging
LOG_LEVEL=info

# Scheduled Jobs
CRON_ENABLED=false
CRON_SCHEDULE_DAILY_LEARN=0 2 * * *

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
